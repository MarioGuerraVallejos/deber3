/*Guerra Mario
 * contador mediante un pulsador de 0-99, se observa en displays.
 * ejercicio 2
*/
int A=13;
int B=12;
int C=11;
int D=10;

int decenas=9;
int unidades=8;
int valor_decena;
int valor_unidad;
int contador=0;
//Pulsador
int pulsador=6;

void setup() {

  pinMode(A,OUTPUT);
  pinMode(B,OUTPUT);
  pinMode(C,OUTPUT);
  pinMode(D,OUTPUT);
  pinMode(unidades,OUTPUT);
  pinMode(decenas,OUTPUT);
  pinMode(pulsador,INPUT);

}

void loop() {
  
 if(digitalRead(pulsador)==HIGH&&contador<100){
      delay(30);
      contador=contador+1;
      valor_decena=contador/10;
      valor_unidad=contador-(valor_decena*10);
      
      digitalWrite(unidades,HIGH);
      digitalWrite(decenas,LOW);
      //imprimir dato
      contador_display(valor_unidad);
      delay(100);
      
      digitalWrite(unidades,LOW);
      digitalWrite(decenas,HIGH);
      //imprimir dato
      contador_display(valor_decena);
      delay(100);
  }
 else{
      if(contador>=100){
        contador=0;    //Reinicio del contador 
        }
  }

}


