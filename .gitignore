/*Guerra Mario
 * ejercicio 3
 * medici칩n de velocidad (0-99) de un motor mediante la lectura de un converso an치logo digital, recordar que deben realizar la conversi칩n de 0-1023 a 0-99 para tener todas las referencias de voltaje.
 */

//Declaraci칩n de variables

int A=13;
int B=12;
int C=11;
int D=10;

int decenas=9;
int unidades=8;
int valor_decena=0;
int valor_unidad=0;
int motor=5;
int valor_cad;
int velocidad;

void setup() {

  pinMode(A,OUTPUT);
  pinMode(B,OUTPUT);
  pinMode(C,OUTPUT);
  pinMode(D,OUTPUT);
  pinMode(unidades,OUTPUT);
  pinMode(decenas,OUTPUT);
  pinMode(motor,OUTPUT);

}

void loop() {

      valor_cad=analogRead(3);  
      analogWrite(motor, valor_cad/4);  
      delay(100);        
      velocidad=map (valor_cad, 0, 1023, 0, 99);          
       valor_decena=velocidad/10;          
       digitalWrite(unidades,LOW);        
        digitalWrite(decenas,HIGH);         
        contador_display(valor_decena);        
        delay(50);
        valor_unidad=velocidad-(valor_decena*10);      
        digitalWrite(unidades,HIGH);                     
        digitalWrite(decenas,LOW);                      
        contador_display(valor_unidad);                       
        delay(50);
}


